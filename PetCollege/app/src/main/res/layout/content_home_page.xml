<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp"

        android:padding="16dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@mipmap/pet_engg_college"
            />

        <Button
            android:id="@+id/a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="student_login"
            android:text="STUDENT LOGIN"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="admin_login"
            android:layout_marginTop="16dp"
            android:text="ADMIN LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/C"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="staff_login"
            android:layout_marginTop="16dp"
            android:text="STAFF LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <Button
            android:id="@+id/d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:onClick="library_login"
            android:layout_marginTop="16dp"
            android:text="LIBRARY LOGIN"
            android:textColor="@android:color/white"
            android:textSize="18dp" />



    </LinearLayout>
</ScrollView>

