<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:padding="16dp">

        <Button
            android:id="@+id/a"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="DEPARTMENT"
            android:onClick="department"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="FACULTY"
            android:onClick="faculty"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/c"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="LIBRARY"
            android:layout_marginTop="20dp"
            android:onClick="library"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/d"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="FEES DETAILS"
            android:layout_marginTop="20dp"
            android:onClick="view_fees"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/e"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="NEWS"
            android:layout_marginTop="20dp"
            android:onClick="news_feed"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/f"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="STAFF LOCATION"
            android:layout_marginTop="20dp"
            android:onClick="staff_location"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
        <Button
            android:id="@+id/g"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="LOGOUT"
            android:layout_marginTop="20dp"
            android:onClick="logout"
            android:textColor="@android:color/white"
            android:textSize="18dp" />


    </LinearLayout>
</ScrollView>


