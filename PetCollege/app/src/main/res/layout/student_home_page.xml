<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    >

    <TextView
        android:id="@+id/text_total_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp"
        android:text="WELCOME"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btn_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_total_amount"
        android:onClick="department"
        android:text="DEPARTMENT" />

    <Button
        android:id="@+id/btn_faculty"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="67dp"
        android:text="FACULTY" />

    <Button
        android:id="@+id/btn_library"
        android:layout_width="118dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btn_map"
        android:text="LIBRARY" />

    <Button
        android:id="@+id/btn_fees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="216dp"
        android:onClick="fees"
        android:text="FEES DETAILS" />

    <Button
        android:id="@+id/btn_transport"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="167dp"
        android:text="TRANSPORT" />

    <Button
        android:id="@+id/btn_map"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="134dp"
        android:onClick="maps"
        android:text="MAP" />

    <Button
        android:id="@+id/btn_add_student"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_fees"
        android:onClick="add_stud"
        android:text="ADD STUD" />

    <Button
        android:layout_width="141dp"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="153dp"
        android:onClick="view_stud"
        android:text="VIEW STUD" />

    <Button
        android:id="@+id/button5"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="86dp"
        android:onClick="add_bus_fees"
        android:text="ADD BUS  FEES" />

    <Button
        android:id="@+id/button6"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_faculty"
        android:layout_alignTop="@+id/button5"
        android:onClick="pay_bus_fees"
        android:text="PAY BUS_FEES" />


</RelativeLayout>