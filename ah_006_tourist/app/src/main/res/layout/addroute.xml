<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="55dp"
        android:text="CHOOSE DISTRICT" />

    <Spinner
        android:id="@+id/spnChooseDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spnChooseDistrict"
        android:layout_below="@+id/spnChooseDistrict"
        android:layout_marginTop="14dp"
        android:text="CHOOSE PLACE" />

    <Spinner
        android:id="@+id/spnChoosePlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2" />

    <EditText
        android:id="@+id/edtSetPAth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="ROUTE DETAILS " />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/spnChoosePlace"
        android:text="SET ROUTE PATH" />

    <Button
        android:id="@+id/btnRouteBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnRouteOk"
        android:layout_alignRight="@+id/textView4"
        android:text="BACK" />

    <Button
        android:id="@+id/btnRouteOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSetPAth"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:text="OK" />

    <EditText
        android:id="@+id/editSetPAth2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtSetPAth"
        android:layout_below="@+id/edtSetPAth"
        android:ems="10" />

</RelativeLayout>
