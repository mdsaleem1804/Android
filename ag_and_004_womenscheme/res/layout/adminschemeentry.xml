<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deeppink"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Scheme Name" />

        <EditText
            android:id="@+id/fedtSchemeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min Age" />

        <EditText
            android:id="@+id/fedtMinAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:ems="10" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max Age" />

        <EditText
            android:id="@+id/fedtMaxAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:ems="10" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Education" />

        <Spinner
            android:id="@+id/fspn_admineducation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
              <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caste" />

        <Spinner
            android:id="@+id/fspn_admincaste"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        
              <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section" />

        <Spinner
            android:id="@+id/fspn_adminsection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount" />

        <EditText
            android:id="@+id/fedtAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:ems="10" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details" />

        <EditText
            android:id="@+id/fedtDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WebSite Link" />

        <EditText
            android:id="@+id/fedtWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        <Button
            android:id="@+id/fbtnAddscheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="savescheme"
            android:text="SAVE" />

        <Button
            android:id="@+id/fbtnUpdateScheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="updatescheme"
            android:text="UPDATE" />

        <Button
            android:id="@+id/fbtnDeleteScheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="deletescheme"
            android:text="DELETE" />
    </LinearLayout>

</ScrollView>