<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nellaibill.aadharconnections.HomePage">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:background="@color/colorAccent">

        <Button
            android:id="@+id/btnsim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="88dp"
            android:onClick="sim1"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btnsim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM2"
            android:layout_below="@+id/btnsim1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="52dp"
            android:onClick="sim2"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFRESH NETWORKS"
            android:layout_below="@+id/btnsim2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="67dp"
            android:onClick="refresh"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
