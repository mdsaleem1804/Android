<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:layout_marginTop="0dp"
>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:text="ADD HOTEL DETAILS" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtHotel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOTEL NAME" />

        <EditText
            android:id="@+id/edtHotelName"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtSingleBed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SINGLE BED RS" />

        <EditText
            android:id="@+id/edtSingleBed"
            android:layout_width="200dp"
            android:inputType="number"
            android:maxLength="6"
            android:layout_height="wrap_content" >
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtDoubleBed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="6"
            android:text="DOUBLE BED RS" />

        <EditText
            android:id="@+id/edtDoubleBed"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >
        </EditText>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtFacilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FACILITIES" />

        <EditText
            android:id="@+id/edtFacilities"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >
        </EditText>
    </TableRow>
     <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txtOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTHER DETAILS" />

        <EditText
            android:id="@+id/edtOthers"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >
        </EditText>
    </TableRow>

     <TableRow
         android:id="@+id/tableRow6"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >

         <Button
             
             android:id="@+id/btnAddHotelData"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"

             android:text="SAVE RECORDS" />

         <Button
             android:id="@+id/btnClear"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:text="CLEAR" />

     </TableRow>

     <Button
         android:layout_marginTop="5dp"
         android:id="@+id/btnback"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="GO BACK" />
<ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tourist5hotel" />
</TableLayout>