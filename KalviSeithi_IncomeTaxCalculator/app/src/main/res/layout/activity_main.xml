<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nellaibill.incometaxcalculator.MainActivity"
    android:background="@color/yellow">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:id="@+id/relativeLayout">

        <Button
            android:id="@+id/btn_it_slab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="INCOME TAX SLAB"
            android:background="@drawable/buttonshape"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:onClick="btn_go_itforms"
            android:layout_below="@+id/button7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btn_it_forms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:text="INCOME TAX FORMS"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@drawable/buttonshape"
            android:layout_below="@+id/btn_it_slab"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/bt_it_forms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INCOME TAX FORMS"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@drawable/buttonshape"
            android:layout_below="@+id/btn_it_forms"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="22dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/btn_refund_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHECK REFUND STATUS"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@drawable/buttonshape"
            android:layout_above="@+id/btn_it_news"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="14dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/btn_it_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INCOMETAX NEWS"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:background="@drawable/buttonshape"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="37dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="INCOME TAX MINI"
            android:background="@drawable/buttonshape"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:onClick="mini"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
