<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Adminaddfr" >
    
      <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView1"
        android:layout_below="@+id/fff"
        android:text="Select To Area"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spnfromarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:entries="@array/area" />

    <ImageButton
        android:id="@+id/adminaddh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:onClick="addhome"
        android:src="@drawable/hhk" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignParentTop="true"
        android:src="@drawable/e" />

    <EditText
        android:id="@+id/bustime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_alignTop="@+id/spinner1"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="Enter bus time"
        android:inputType="text"
        android:textColorHint="#000080" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/busdelaytime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinner1"
        android:layout_below="@+id/tt2"
        android:ems="10"
        android:hint="Enter delay time"
        android:inputType="text"
        android:textColorHint="#000080" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/adminaddh"
        android:text="Add New Bus"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/adminaddh"
        android:text="From MS University"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/adminadda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_toRightOf="@+id/imageView1"
        android:onClick="adminaddb"
        android:src="@drawable/add" />

    <EditText
        android:id="@+id/busnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bustime"
        android:layout_below="@+id/bustime"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="Enter bus number"
        android:inputType="text"
        android:textColorHint="#000080" />

</RelativeLayout>
